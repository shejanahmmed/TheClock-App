<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TheClock" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:navigationBarColor">@color/light_black</item>
        <!-- Control colors -->
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/Theme.TheClock.ActionBar</item>
        <item name="actionOverflowMenuStyle">@style/Theme.TheClock.OverflowMenu</item>
        <item name="popupMenuStyle">@style/Theme.TheClock.PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/Theme.TheClock.DropDownListView</item>
    </style>

    <style name="Theme.TheClock.ActionBar" parent="Widget.MaterialComponents.ActionBar.Solid">
        <item name="background">@color/black</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Theme.TheClock.DropDownListView" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">#33FFFFFF</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="Theme.TheClock.PopupMenu" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.TheClock.PopupMenuWrapper" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:dropDownListViewStyle">@style/Theme.TheClock.DropDownListView</item>
        <item name="android:popupMenuStyle">@style/Theme.TheClock.PopupMenu</item>
    </style>

    <style name="Theme.TheClock.OverflowMenu" parent="Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">16dp</item>
        <item name="android:dropDownHorizontalOffset">-16dp</item>
        <item name="android:popupBackground">@drawable/menu_background</item>
    </style>

    <style name="Theme.TheClock.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:navigationBarColor">@color/light_black</item>
    </style>

    <style name="Theme.TheClock.TimePicker" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:timePickerMode">spinner</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">#88FFFFFF</item>
        <item name="android:numbersTextColor">@color/white</item>
        <item name="android:numbersBackgroundColor">@color/black</item>
    </style>
</resources>